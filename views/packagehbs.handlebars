                <div class="media-left">
                    <a href="#">
                        <img class="media-object" src="..." alt="...">
                    </a>
                </div>
                <div class="media-body">
                    <h4 class="media-heading">{{this.venue}}</h4>
                    ...
                </div>
            </div>
            {{/if}} {{#if this.photographers}}
